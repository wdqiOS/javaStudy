<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:shrinkColumns="1,2"
    android:padding="10dp">

    <!--
    如果直接在TableLayout中添加控件，那么控件将和父容器等宽
    如果想让控件出现在同一行，那么这些控件外层一定要加一对TableRow
    TableRow中的控件，宽度都是默认wrap_content
    android:shrinkColumns="1,2" 设置课收缩的列
    android:stretchColumns="*" 课伸展的列
    android:collapseColumns="0,1" 课隐藏的列

    -->
    <EditText
        android:hint="0"
        android:gravity="right"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <TableRow>
        <Button
            android:text="7"
            android:layout_margin="3dp"
            />
        <Button
            android:text="8"
            android:layout_margin="3dp"
            />
        <Button
            android:text="9"
            android:layout_margin="3dp"
            />
        <Button
            android:text="/"
            android:layout_margin="3dp"
            />
    </TableRow>
    <TableRow>
        <Button
            android:text="4"
            android:layout_margin="3dp"
            />
        <Button
            android:text="5"
            android:layout_margin="3dp"
            />
        <Button
            android:text="6"
            android:layout_margin="3dp"
            />
        <Button
            android:text="*"
            android:layout_margin="3dp"
            />
    </TableRow>
    <TableRow>
        <Button
            android:text="1"
            android:layout_margin="3dp"
            />
        <Button
            android:text="2"
            android:layout_margin="3dp"
            />
        <Button
            android:text="3"
            android:layout_margin="3dp"
            />
        <Button
            android:text="-"
            android:layout_margin="3dp"
            />
    </TableRow>
    <TableRow>
        <Button
            android:text="0"
            android:layout_margin="3dp"
            />
        <Button
            android:text="."
            android:layout_margin="3dp"
            />
        <Button
            android:text="+"
            android:layout_margin="3dp"
            />
        <Button
            android:text="="
            android:layout_margin="3dp"
            />
    </TableRow>

    <Button
        android:text="Clear"
        android:layout_marginTop="10dp"
        />

</TableLayout>